{
	"name": "@donew-innovations/mentoring-api",
	"version": "0.0.1",
	"description": "The DoNew Mentoring API.",
	"type": "module",
	"main": "./source/server.js",
	"exports": "./source/server.js",
	"scripts": {
		"clean": "zx ./scripts/clean.mjs",
		"develop": "zx ./scripts/develop.mjs",
		"deploy": "zx ./scripts/deploy.mjs",
		"test": "zx ./scripts/test.mjs",
		"lint": "xo {source,tests}/**/*.js && prettier --check .",
		"format": "xo --fix {source,tests}/**/*.js && prettier --write .",
		"roles": "zx ./scripts/roles.mjs",
		"prepare": "patch-package"
	},
	"dependencies": {
		"@bountyrush/firestore": "5.0.2-rest.1",
		"@milahu/patch-package": "6.4.14",
		"fastify": "4.0.3",
		"fastify-plugin": "3.0.1",
		"got": "12.1.0",
		"jsonwebtoken": "8.5.1",
		"pino": "8.0.0",
		"pino-pretty": "8.0.0",
		"stacktrace-parser": "0.1.10"
	},
	"devDependencies": {
		"@google-cloud/functions-framework": "3.1.2",
		"jest": "28.1.1",
		"chalk": "5.0.1",
		"firebase-tools": "11.1.0",
		"nodemon": "2.0.16",
		"prettier": "2.7.1",
		"wait-on": "6.0.1",
		"xo": "0.50.0",
		"zx": "7.0.1"
	},
	"prettier": {
		"semi": false,
		"useTabs": true,
		"singleQuote": true,
		"bracketSpacing": true,
		"trailingComma": "all",
		"proseWrap": "always",
		"endOfLine": "lf"
	},
	"xo": {
		"prettier": true,
		"rules": {
			"capitalized-comments": 0,
			"no-await-in-loop": 0
		},
		"globals": [
			"$"
		]
	},
	"jest": {
		"testMatch": [
			"<rootDir>/tests/**/*.js"
		],
		"transform": {},
		"maxConcurrency": 1,
		"collectCoverage": true,
		"coverageProvider": "v8"
	},
	"env": {
		"dev": {
			"PORT": "4242",
			"NODE_ENV": "development",
			"FIREBASE_PROJECT_ID": "donew-mentoring-api-sandbox",
			"FIREBASE_DB_EMULATOR_HOST": "localhost:8080",
			"FIREBASE_AUTH_EMULATOR_HOST": "localhost:9099",
			"FIRESTORE_USE_REST_API": "true",
			"FIREBASE_API_KEY": "something-complex"
		},
		"test": {
			"PORT": "4242",
			"NODE_ENV": "test",
			"FIREBASE_PROJECT_ID": "donew-mentoring-api-sandbox",
			"FIREBASE_DB_EMULATOR_HOST": "localhost:8080",
			"FIREBASE_AUTH_EMULATOR_HOST": "localhost:9099",
			"FIRESTORE_USE_REST_API": "true",
			"FIREBASE_API_KEY": "something-complex",
			"FORCE_COLOR": "2",
			"NODE_OPTIONS": "--experimental-vm-modules"
		}
	}
}
