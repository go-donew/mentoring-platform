{
	"name": "@donew-innovations/mentoring-api",
	"version": "0.0.1",
	"description": "The DoNew Mentoring API.",
	"type": "module",
	"main": "./source/server.js",
	"exports": "./source/server.js",
	"engines": {
		"node": ">= 16",
		"pnpm": ">= 7"
	},
	"scripts": {
		"clean": "zx ./scripts/clean.mjs",
		"develop": "zx ./scripts/develop.mjs",
		"deploy": "zx ./scripts/deploy.mjs",
		"build": "zx ./scripts/build.mjs",
		"test": "zx ./scripts/test.mjs",
		"lint": "xo {source,tests}/**/*.js && prettier --check --ignore-path .gitignore .",
		"format": "xo --fix {source,tests}/**/*.js && prettier --write .",
		"roles": "zx ./scripts/roles.mjs",
		"prepare": "[ \"$NODE_ENV\" != \"production\" ] && patch-package || echo",
		"gcp-build": "patch-package"
	},
	"dependencies": {
		"fastify": "4.0.3",
		"fastify-plugin": "3.0.1",
		"got": "12.1.0",
		"jsonwebtoken": "8.5.1",
		"pino": "8.0.0",
		"pino-pretty": "8.0.0",
		"stacktrace-parser": "0.1.10"
	},
	"devDependencies": {
		"@milahu/patch-package": "6.4.14",
		"@google-cloud/functions-framework": "3.1.2",
		"chalk": "5.0.1",
		"dotenv": "16.0.1",
		"firebase-tools": "11.1.0",
		"jest": "28.1.1",
		"nodemon": "2.0.16",
		"prettier": "2.7.1",
		"serve-handler": "6.1.3",
		"wait-on": "6.0.1",
		"xo": "0.50.0",
		"zx": "7.0.1"
	},
	"prettier": {
		"semi": false,
		"useTabs": true,
		"singleQuote": true,
		"bracketSpacing": true,
		"trailingComma": "all",
		"proseWrap": "always",
		"endOfLine": "lf"
	},
	"xo": {
		"prettier": true,
		"rules": {
			"capitalized-comments": 0,
			"no-await-in-loop": 0
		},
		"globals": [
			"$",
			"describe",
			"test",
			"it",
			"expect",
			"beforeAll",
			"afterAll"
		]
	},
	"jest": {
		"testMatch": [
			"<rootDir>/tests/end-to-end/api.js"
		],
		"collectCoverageFrom": [
			"source/**/*.js",
			"tests/**/*.js",
			"!source/server.js",
			"!tests/helpers/*.js"
		],
		"transform": {},
		"maxConcurrency": 1,
		"collectCoverage": true,
		"coverageProvider": "v8"
	}
}
